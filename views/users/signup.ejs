<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h1>Signup on WanderLust</h1>
        <form method="POST" action="/signup" class="needs-validation mt-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" placeholder="enter your username" class="form-control" required />
                <div class="valid-feedback">It seems like a catchy username</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" placeholder="enter your email" class="form-control" required />

                <div class="invalid-feedback">Please enter a valid Email</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" placeholder="enter your password" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid Password</div>
            </div>
            <button class="btn btn-dark add-btn mt-2 mb-3">Submit</button>
        </form>
    </div>
</div>
