<% layout('/layouts/boilerplate.ejs')%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h4><b><%= listing.title %></b></h4>
        </div>
        <div class="card col-8 offset-2">
            <img src="<%= listing.image %>" class="card-img-top alt="listing_image" />
            <div class="card-body">
                <p class="card-text">
                    <!-- <br /> -->
                    <%= listing.description %> <br />
                    &#8377; <%= listing.price.toLocaleString('en-IN') %>/night <br />
                    <%= listing.location %> <br />
                    <%= listing.country %>
                </p>
            </div>
        </div>
        <div class="btns">
            <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn offset-2">Edit</a>
            <form action="/listings/<%= listing.id %>?_method=delete" method="post"><button class="btn btn-dark offset-4">Delete</button></form>
        </div>
        <div class="col-8 offset-2 mb-3">
            <hr />
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                    <label for="range" class="form-label">Rating</label>
                    <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range" />
                </div>
                <div class="mt-3 mb-3">
                    <label for="comment" class="form-label">Comment your views</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <hr />
            <ul>
                <% for (let review of listing.reviews) { %>
                <li><%= review.comment %>, <%= review.rating %> stars</li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
