<% layout('/layouts/boilerplate.ejs') %>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h3>Edit your Listing</h3>
            <form method="post" action="/listings/<%= listing.id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input name="listing[description]" type="text" value="<%= listing.description %>" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image url/link</label>
                    <input name="listing[image]" type="text" value="<%= listing.image %>" class="form-control" />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="text" value="<%= listing.price %>" class="form-control" />
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="Country" class="form-label">Country</label>
                        <input name="listing[Country]" type="text" value="<%= listing.country %>" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" />
                </div>
                <button class="btn btn-dark edit-btn mt-2 mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>
