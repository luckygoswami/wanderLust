<% layout('/layouts/boilerplate.ejs')%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h4>Listing details:</h4>
            <div class="card">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" />
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b></p>
                </div>
            </div>
            <ul>
                <li><%= listing.title %></li>
                <li><%= listing.description %></li>
                <li>&#8377; <%= listing.price.toLocaleString('en-IN') %></li>
                <li><%= listing.location %></li>
                <li><%= listing.country %></li>
            </ul>
            <div class="row">
                <div class="col-1"><a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn">Edit</a><br /><br /></div>
                <div class="col offset-2">
                    <form action="/listings/<%= listing.id %>?_method=delete" method="post"><button class="btn btn-dark">Delete</button></form>
                </div>
            </div>
        </div>
    </div>
</body>
